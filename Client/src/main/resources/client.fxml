<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="Controller">
    <MenuBar>
        <Menu text="Программа">
            <MenuItem onAction="#exitAction" text="Выйти из программы" />
        </Menu>
    </MenuBar>
    <TextArea fx:id="mainArea" editable="false" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="msgField" onAction="#sendMsgAction" promptText="Введите сообщение..." HBox.hgrow="ALWAYS" />
    <Button mnemonicParsing="false" text="Прикрепить файл" onAction="#selectFile"  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
        <Button onAction="#sendMsgAction" prefHeight="25.0" prefWidth="80.0" text="Отправить" />
      <ButtonBar prefHeight="40.0" prefWidth="0.0" />
    </HBox>
</VBox>
